<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NoteActivity.EditNote.EditNoteActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editNoteText"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:id="@+id/editNoteButton"
        app:layout_constraintTop_toBottomOf="@+id/editNoteText"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="updateNote"
        android:layout_marginTop="50dp"
        android:layout_marginStart="70dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/cancelNoteButton"
        app:layout_constraintTop_toBottomOf="@+id/editNoteText"
        app:layout_constraintEnd_toEndOf="parent"
        android:onClick="cancelNote"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="70dp"/>






</androidx.constraintlayout.widget.ConstraintLayout>